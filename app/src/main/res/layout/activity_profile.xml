<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".profile">

    <!-- Profile Image with Circular Border -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/dev"
        android:contentDescription="Profile Image"
        android:background="@drawable/profile_image_border"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        android:padding="4dp"
        android:shape="ring"/>

    <!-- Developer Name -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MD Fahim Shariar"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Developer Info -->
    <TextView
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Software Developer"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_name"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <!-- University Info -->
    <TextView
        android:id="@+id/profile_university"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Northern University Bangladesh"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_title"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <!-- Department Info -->
    <TextView
        android:id="@+id/profile_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dept. of Computer Science &amp; Engineering"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_university"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <!-- Contact Info Layout -->
    <LinearLayout
        android:id="@+id/profile_contact_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/profile_department"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">

        <!-- Email Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_mail_24"
            android:contentDescription="Email Icon" />

        <!-- Email Address -->
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shariarfahim21@gmail.com"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</RelativeLayout>
